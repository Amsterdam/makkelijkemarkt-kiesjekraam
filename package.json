{
  "name": "@fixxx/pakjekraam",
  "version": "0.0.1",
  "description": "",
  "repository": "https://github.com/Amsterdam/fixxx-pakjekraam.git",
  "main": "src/index.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "db": "pg_ctl -D /usr/local/var/postgres start",
    "build": "gulp build",
    "build:typescript": "tsc --project tsconfig.json",
    "deploy": "ts-node src/deploy.js",
    "clean": "rm -rf dist/* node_modules/.cache/",
    "prestart": "npm run deploy",
    "dev-server": "( export $(cat .env) && npm run dev)",
    "start": "ts-node --transpile-only src/index.ts",
    "predev": "npm run build && npm run deploy",
    "dev": "ENABLE_CORS_FOR_ORIGIN='http://localhost:3000' ts-node-dev --ignore-watch node_modules src/index.ts",
    "allocation": "ts-node src/allocation.ts",
    "concept": "ts-node src/concept-allocation.ts",
    "allocation-env": "( . .env && npm run allocation)",
    "migrate": "( . .env && npx sequelize-cli db:migrate)",
    "migrate:undo": "( . .env && npx sequelize-cli db:migrate:undo)",
    "migrate-rsvp-to-mm-api": "ts-node src/migrate-rsvp.ts",
    "migrate-marktvoorkeur-to-mm-api": "ts-node src/migrate-marktvoorkeur.ts",
    "migrate-plaatsvoorkeur-to-mm-api": "ts-node src/migrate-plaatsvoorkeur.ts",
    "migrate-marktconfiguratie-to-mm-api": "ts-node src/migrate-marktconfig.ts",
    "import": "echo 'Import skipped. Temporarily disabled.' && exit 0",
    "tdd": "jest --watch --verbose --rootDir ./src/",
    "test": "jest --verbose --silent --rootDir ./src/",
    "lint": "npm run lint:eslint",
    "lint:eslint": "eslint './src/**/*.js' './src/**/*.jsx' './src/**/*.ts' './src/**/*.tsx'",
    "lint-fix": "npm run lint-fix:eslint; npm run lint-fix:prettier; npm run lint-fix:tslint",
    "lint-fix:eslint": "npm run lint:eslint -- --fix",
    "lint-fix:prettier": "prettier --write '**/*.js' '**/*.json' '**/*.jsx' '*.yml'",
    "lint-fix:tslint": "npm run lint:tslint -- --fix",
    "lint-non-npm": "git ls-files '*.yml' | tr '\n' '\\0' | xargs -0 yamllint",
    "prewatch": "npm run clean && npm run build",
    "mailing-list": "ts-node src/mailing-list.tsx",
    "mail-test": "ts-node src/mailing-test.tsx",
    "sass": "gulp watch"
  },
  "author": "",
  "license": "MPL-2.0",
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "7.4.4",
    "@types/bluebird": "3.5.29",
    "@types/connect-pg-simple": "4.2.0",
    "@types/cookie-parser": "1.4.2",
    "@types/cors": "2.8.12",
    "@types/csurf": "1.9.36",
    "@types/express": "4.16.0",
    "@types/express-session": "1.15.10",
    "@types/jest": "27.4.1",
    "@types/keycloak-connect": "^7.0.0",
    "@types/morgan": "1.7.35",
    "@types/node": "16.4.2",
    "@types/node-sass": "4.11.2",
    "@types/prop-types": "15.7.1",
    "@types/qs": "6.5.3",
    "@types/react": "16.8.19",
    "@types/react-dom": "16.8.4",
    "@types/validator": "13.7.0",
    "@typescript-eslint/eslint-plugin": "5.13.0",
    "@typescript-eslint/parser": "5.13.0",
    "babel-register": "6.26.0",
    "eslint": "8.10.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-plugin-react": "^7.13.0",
    "gulp": "4.0.2",
    "gulp-clean-css": "4.2.0",
    "gulp-sass": "^5.1.0",
    "husky": "2.3.0",
    "jest": "27.5.1",
    "lint-staged": "12.3.4",
    "lintspaces-cli": "0.7.1",
    "node-dev": "7.1.0",
    "prettier": "1.17.1",
    "ts-jest": "27.1.3",
    "ts-node": "^10.0.0",
    "typescript": "3.9.10",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "adm-zip": "0.5.2",
    "axios": "0.21.2",
    "axios-cache-adapter": "2.7.3",
    "axios-logger": "1.0.0",
    "bee-queue": "^1.4.0",
    "bluebird": "3.7.2",
    "connect-redis": "6.1.3",
    "cookie-parser": "1.4.4",
    "cors": "2.8.5",
    "csurf": "1.10.0",
    "dotenv": "8.1.0",
    "express": "^4.17.3",
    "express-react-views": "^0.11.0",
    "express-session": "^1.17.2",
    "file-type": "15.0.1",
    "formidable": "1.2.1",
    "jsonschema": "1.2.5",
    "keycloak-admin": "1.14.22",
    "keycloak-connect": "6.0.1",
    "moment": "2.24.0",
    "moment-timezone": "0.5.27",
    "morgan": "1.9.1",
    "node-cache": "5.1.2",
    "node-stream-zip": "1.13.0",
    "nodemailer": "6.7.2",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "pg-pool": "^3.5.1",
    "prop-types": "15.7.2",
    "qs": "6.7.0",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-qr-svg": "2.2.1",
    "read-chunk": "3.2.0",
    "redis": "4.0.6",
    "rxjs": "6.5.2",
    "sass": "1.49.9",
    "sequelize": "5.22.5",
    "sequelize-cli": "6.4.1",
    "sortablejs": "1.10.1",
    "ts-node-dev": "1.1.8",
    "webpack": "^4.46.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,json,jsx}": [
      "eslint"
    ],
    "src/**/*.{ts,tsx}": [
      "npm run lint:tslint"
    ],
    "config/markt/**/*.json": [
      "node ./src/check-markt-config.js"
    ]
  }
}
